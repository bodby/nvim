{
  "function": {
    "prefix": "function",
    "body": [
      "function$1($2)",
      "\t$0",
      "end"
    ]
  },

  "pcall": {
    "prefix": "pcall",
    "body": "local ${1:ok}, ${2:value} = pcall($3)$0"
  },

  "if": {
    "prefix": "if",
    "body": [
      "if $1 then",
      "\t$0",
      "end"
    ]
  },

  "either": {
    "prefix": "either",
    "body": "$1 and $2 or $0"
  },

  "elseif": {
    "prefix": "elseif",
    "body": [
      "elseif $1 then",
      "\t$0",
      "end"
    ]
  },

  "for-range": {
    "prefix": "for-range",
    "body": [
      "for ${1:i} = ${2:1}, ${3:10} do",
      "\t$0",
      "end"
    ]
  },

  "for-ipairs": {
    "prefix": "for-ipairs",
    "body": [
      "for ${1:i}, ${2:v} in ipairs(${3:arr}) do",
      "\t$0",
      "end"
    ]
  },

  "for-pairs": {
    "prefix": "for-pairs",
    "body": [
      "for ${1:k}, ${2:v} in pairs(${3:tbl}) do",
      "\t$0",
      "end"
    ]
  },

  "while": {
    "prefix": "while",
    "body": [
      "while $1 do",
      "\t$0",
      "end"
    ]
  },

  "repeat": {
    "prefix": "repeat",
    "body": [
      "repeat",
      "\t$0",
      "until $1"
    ]
  }
}
